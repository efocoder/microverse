<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col col-md-9">
      <div class="float-end m-3">
        <%= form_for :user, url: users_url, method: :get do |f| %>
         Filter:  <%= select_tag :status, options_for_select([@filter, 'All', 'Active', 'Inactive']),
                         onchange: 'this.form.submit()', class: 'form-control form-control-sm'  %>
        <%end %>
      </div>
      <table class="table table-striped table-bordered border-primary table-sm">
        <thead>
        <th>ID</th>
        <th>Date</th>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Status</th>
        <th></th>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.created_at %></td>
            <td><%= user.email %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.status %></td>
            <td><%= link_to 'Show', user %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <% if @page >  Constants::DEFAULT_PAGE_NUMBER %>
            <li class="page-item"><%= link_to 'Prev', users_url(page: @page -  Constants::DEFAULT_PAGE_NUMBER, status: @filter), class: 'page-link' %></li>
          <% end  %>
          <li class="page-item"><%= link_to 'Next', users_url(page: @page +  Constants::DEFAULT_PAGE_NUMBER, status: @filter), class: 'page-link'%></li>
        </ul>
      </nav>
    </div>
  </div>
</div>